<!doctype html>
<html class="no-js" lang="en">
<head>
	<!-- Global site tag (gtag.js) - Google Analytics -->
	<script async src="https://www.googletagmanager.com/gtag/js?id=UA-111724682-1"></script>
	<script>
	window.dataLayer = window.dataLayer || [];
	function gtag(){dataLayer.push(arguments);}
	gtag('js', new Date());

	gtag('config', 'UA-111724682-1');
	</script>

	<meta charset="utf-8">
	<meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<title><%= "#{current_page.data.title || yield_content(:title)} | Troy Mock Creative" %></title>
	
	<%= stylesheet_link_tag "normalize", "compile" %>
	<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css?family=Hind:300,400,600" rel="stylesheet">
	<link rel="stylesheet" href="/fancybox-master/dist/jquery.fancybox.css" />

</head>

<body class="<%= page_classes %>">

	<header class="site-header">

		<div class="site-header__wrapper">

			<% link_to '/index.html' do %>
			<div class="logo__1">troy mock</div>
			<div class="logo">
				<%= image_tag "logo.png", class: "logo__image" %>
			</div>
			<% end %>
			<div class="main-nav">
				<ul class="main-nav__menu">
					<!--<li><%= link_to 'DESIGN', '/index.html' %></li>-->
					<li><%= link_to 'EXPERIMENTS', '/experiments.html' %></li>
					<li><%= link_to 'ABOUT', '/about.html' %></li>
				</ul>
			</div>

			<div class="mobile-buttons">
				<!--<%= link_to 'DESIGN', '/index.html', :class => 'mobile-button' %>-->
				<%= link_to 'EXPERIMENTS', '/experiments.html', :class => 'mobile-button' %>
				<%= link_to 'ABOUT', '/about.html', :class => 'mobile-button' %>

			</div>
			
		</div>
	</header>

	<%=yield%>

	<footer class="site-footer">
		<div class="site-footer__copyright">
			<span>Troy Mock 2019</span>
		</div>
		<div class="link__footer">
			<!--<a href="https://www.instagram.com/trocckk/" target="_blank">
				<%= image_tag "instagram.png", class: "footer__image" %>
			</a>-->
			<a href="https://www.youtube.com/user/limeblisss" target="_blank">
				<%= image_tag "youtube.png", class: "footer__image" %>
			</a>
			<a href="http://www.linkedin.com/in/troymock" target="_blank">
				<%= image_tag "linkedin.png", class: "footer__image" %>
			</a>
		</div>


	</footer>

	<script src="//code.jquery.com/jquery-3.2.1.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.1.20/jquery.fancybox.min.js"></script>
	<script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
	<script type="text/javascript" src="/js/classie.js"></script>

</body>
</html>